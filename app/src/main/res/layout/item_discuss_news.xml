<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/discuss_container"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:paddingBottom="20.0dip"
    android:paddingTop="18.0dip"
    android:background="#f0f2f4"
    android:layout_marginTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/title"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="380dip"
            android:layout_height="200dip"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/gou"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="220dp"
        android:id="@+id/content">

        <TextView
            android:id="@+id/text_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="移动端游戏分销交流平台研究"
            android:textColor="@color/item_column_page_textcolor_title"
            android:textStyle="bold"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/text_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:text="移动端游戏分销交流平台研究"
            android:textColor="@color/item_column_page_textcolor_author"
            android:textSize="15dp" />

    </RelativeLayout>


</RelativeLayout>
